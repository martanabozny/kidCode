<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="3" android:background="@drawable/draw_background">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/result" android:textColor="#000000" android:textSize="20dp" android:layout_weight="0.6"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="= draw"
            android:id="@+id/textView" android:textIsSelectable="false" android:textColor="#000000"
            android:textSize="20dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/figure" android:textColor="#000000" android:textSize="20dp" android:layout_weight="1.7"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/colorPreview" android:layout_weight="0.7" android:layout_marginBottom="10dp"/>
</LinearLayout>