<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:baselineAligned="false">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="4">
        <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="if"
                android:id="@+id/conditionName" android:textColor="#fffcf9"/>
        <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/variable" android:layout_weight="1"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/condition"
                android:entries="@array/condition" android:layout_weight="1.3"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/function" android:visibility="invisible" android:layout_weight="1.3"/>
        <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/compareWith" android:layout_weight="0.4" android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button android:layout_width="0dp" android:layout_height="fill_parent" android:text="-" android:id="@+id/delete"
                android:background="@drawable/minusbutton_background"
                android:textColor="#000000" android:layout_weight="0.8" android:longClickable="true"/>
        <Button android:layout_width="0dp" android:layout_height="fill_parent" android:text="+" android:id="@+id/add"
                android:layout_gravity="right"
                android:background="@drawable/plusbutton_background" android:textColor="#000000"
                android:layout_weight="0.8"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView2" android:text="{" android:textColor="#fdfffb"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/editText" android:text="}" android:textColor="#fffff1"/>
    </LinearLayout>
</LinearLayout>