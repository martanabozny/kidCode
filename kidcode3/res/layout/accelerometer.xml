<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="2">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:weightSum="2" android:layout_weight="0.3">
        <AutoCompleteTextView
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:id="@+id/result" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:text="="/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/accels" android:layout_weight="1"
                android:entries="@array/accels"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp"
                  android:layout_weight="1.7" android:id="@+id/linearLayout">
        <SeekBar android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/x"
                 android:layout_weight="1" android:max="100" android:thumb="@drawable/x"/>
        <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/y"
                 android:layout_weight="1" android:max="100" android:thumb="@drawable/y"/>
        <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/z"
                 android:layout_weight="1" android:max="100" android:thumb="@drawable/z"/>
    </LinearLayout>
</LinearLayout>