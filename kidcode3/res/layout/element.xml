<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
    <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="open"
            android:id="@+id/fileName" android:layout_weight="1"
            android:gravity="left" android:textColor="#fafffb" android:layout_margin="10dp" android:textSize="20dp"
            android:background="@android:color/transparent"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:text="X"
            android:id="@+id/delete" android:background="@android:color/transparent" android:textColor="#ffdbe7"
            android:layout_margin="10dp" android:textSize="20dp"/>
</LinearLayout>