<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:baselineAligned="false" android:background="@drawable/condition_background">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="4">
        <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="condition"
                android:id="@+id/conditionName" android:textColor="@android:color/black"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/variable" android:layout_weight="0.7" android:textColor="#000000"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/condition"
                android:entries="@array/condition" android:layout_weight="1.3"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/function" android:visibility="invisible" android:layout_weight="1.3"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/compareWith"
                android:layout_gravity="right" android:visibility="invisible" android:layout_weight="0.7"
                android:textColor="#000000"/>
        <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/cancel" android:background="@drawable/bin"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="10dp"
                android:layout_height="fill_parent"
                android:id="@+id/textView2"/>
        <view android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              class="com.example.kidcode2.MyScrollView" android:id="@+id/MyView" android:layout_gravity="center_horizontal"
              android:minHeight="40dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:id="@+id/spacer"/>
</LinearLayout>