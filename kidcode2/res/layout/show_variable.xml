<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="4"
              android:background="@drawable/show_variable_background">

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/variable" android:layout_weight="1" android:layout_gravity="center"/>
    <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/textView" android:textColor="#000000" android:layout_gravity="center"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/value" android:layout_gravity="center_vertical" android:layout_weight="3"
            android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/cancel" android:background="@drawable/bin"/>
</LinearLayout>