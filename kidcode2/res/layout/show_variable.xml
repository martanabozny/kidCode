<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="4"
              android:background="@drawable/show_variable_background">

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select variable..."
            android:id="@+id/variable" android:layout_weight="1"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/value" android:layout_weight="3" android:editable="false"/>
    <Button
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:id="@+id/cancel" android:background="@drawable/bin"/>
</LinearLayout>