<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="3" android:background="@drawable/stop_background">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Show me as my program result:"
            android:id="@+id/text" android:textColor="#fffede" android:layout_weight="2"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/result" android:layout_weight="1"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/cancel" android:background="@drawable/bin"/>
</LinearLayout>