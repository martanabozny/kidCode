<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="4" android:background="@drawable/strings_background">
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/result" android:layout_weight="1" android:layout_marginBottom="5dp"/>
    <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="="
            android:id="@+id/textView" android:textColor="#000000"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="2">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text" android:layout_gravity="top"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is variable name"
                android:id="@+id/is_variable" android:checked="false"/>
    </LinearLayout>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/functions" android:layout_weight="1"
            android:entries="@array/string_functions" style="@style/SpinnerAsButton"/>
    <Button
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/cancel" android:background="@drawable/bin"/>
</LinearLayout>