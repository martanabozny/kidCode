<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:text="New"
            android:id="@+id/newCode" android:layout_gravity="center_horizontal"
            android:onClick="OnNewClick"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:id="@+id/open" android:layout_gravity="center_horizontal" android:onClick="OnOpenClick"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last"
            android:id="@+id/last" android:layout_gravity="center_horizontal" android:onClick="OnLastClick"/>
</LinearLayout>